{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    {% include 'sideBar.html.twig' %}
    <!-- CONTENT -->
    <section id="content">
        {% include 'navbar.html.twig' %}

        <!-- MAIN -->
        <main id="main-content">
            <div class="head-title">
                <div class="left">
                    <h1>Edit User</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="#">Dashboard</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="#">Edit User</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- Dynamic content will be loaded here -->
            <div class="container">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.email, 'Email') }}
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.password, 'Password') }}
                            {{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.role, 'Role') }}
                            {{ form_widget(form.role, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center justify-content-md-between align-items-center mt-4">
                    <a href="{{ path('app_users_index') }}" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Update</button>
                    {{ include('users/_delete_form.html.twig') }}
                </div>

                {{ form_end(form) }}
            </div>
        </main>
        <!-- MAIN -->
    </section>
    <!-- CONTENT -->
{% endblock %}
